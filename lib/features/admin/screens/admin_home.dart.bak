  Widget build(BuildContext context) {
    return Consumer<AdminController>(
      builder: (context, adminCtrl, _) {
        final pharmacies = switch (_filter) {
          'Pending' => adminCtrl.pendingPharmacies,
          'Approved' => adminCtrl.approvedPharmacies,
          'Rejected' => adminCtrl.rejectedPharmacies,
          _ => adminCtrl.pharmacies,
        };

        return Scaffold(
          backgroundColor: Colors.grey[200],
          body: RefreshIndicator(
            onRefresh: () async {
              setState(() {
                _adminDataFuture = _fetchAdminData();
              });
              await adminCtrl.fetchPharmacies();
            },
            child: CustomScrollView(
              physics: const AlwaysScrollableScrollPhysics(),
              slivers: [
                SliverToBoxAdapter(
                  child: Column(
                    children: [
                      _buildHeader(context, adminCtrl),
                      const SizedBox(height: 12),
                      Padding(
                        padding: const EdgeInsets.symmetric(horizontal: 16),
                        child: Row(
                          children: [
                            _statCard(
                              label: 'Pending',
                              value: adminCtrl.pendingPharmacies.length,
                              color: Colors.orange,
                            ),
                            const SizedBox(width: 10),
                            _statCard(
                              label: 'Approved',
                              value: adminCtrl.approvedPharmacies.length,
                              color: Colors.green,
                            ),
                            const SizedBox(width: 10),
                            _statCard(
                              label: 'Rejected',
                              value: adminCtrl.rejectedPharmacies.length,
                              color: Colors.red,
                            ),
