rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
        // Helper to check admin role from the users collection
        function isAdmin() {
          return isAuthenticated() &&
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
        }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
      
      // Medicines subcollection - users can manage their own medicines
      match /medicines/{medicineId} {
        allow read: if isAuthenticated(); // Allow authenticated users to read (for search)
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
    }
    
    // CollectionGroup query for medicines (search functionality)
    // This allows searching across all medicines subcollections
    match /{path=**}/medicines/{medicineId} {
      allow read: if isAuthenticated();
    }

    // Support requests (pharmacy rejections, appeals, etc.)
    // - Authenticated users can create/update their own ticket document under support_requests/rejection_<uid>
    // - Admins can read all (currently modeled as email contains 'admin')
    match /support_requests/{requestId} {
      function isOwnerOfRequest() {
        // Accept either explicit uid field or doc id pattern rejection_<uid>
        return isAuthenticated() && (
          request.resource.data.uid == request.auth.uid ||
          requestId == 'rejection_' + request.auth.uid
        );
      }

      allow create, update: if isOwnerOfRequest() || isAdmin();
      allow read: if isAuthenticated();
    }
  }
}

